# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'TCCKronos' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for TCCKronos
  pod 'FMDB'
  pod 'Sentry', :git => 'https://github.com/getsentry/sentry-cocoa.git', :tag => '8.13.0'
  pod 'Sparkle'

  target 'TCCKronosTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'FMDB'
    pod 'Sentry', :git => 'https://github.com/getsentry/sentry-cocoa.git', :tag => '8.13.0'
  end

end

target 'TCCKronosExtension' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for TCCKronosExtension
  pod 'FMDB'
  pod 'Sentry', :git => 'https://github.com/getsentry/sentry-cocoa.git', :tag => '8.13.0'

end
